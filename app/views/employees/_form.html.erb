<%= form_for(@employee) do |f| %>
	<div class="container-fluid">
	  <div class="row">
	    <div class="col">
	      <%= f.label :name, class:"d-flex justify-content-center" %>
      	<%= f.text_field :name, class:"form-control"  %>
	    </div>
	    <div class="col">
	      <%= f.label :email, class:"d-flex justify-content-center" %>
      	<%= f.email_field :email, class:"form-control"  %>
	    </div>
	    <div class="col">
	      <%= f.label :joining_date, class:"d-flex justify-content-center" %>
     		<%= f.datetime_field :joining_date, class:"form-control" %>
	    </div>
	    <div class="col">
	    	<%= f.label :birth_date,  class:"d-flex justify-content-center" %>
     		<%= f.datetime_field :birth_date, class:"form-control" %>
	    </div>
	    <div class="col">
	    	<% if @employee.id.present? %>
			    <button class="btn btn-primary update", data-id="<%= employee.id%>", type="button">Update</button>
			  <% else %>
			    <%= f.submit "create", class: "btn btn-danger insert", type:"button" %>
			  <% end %>
	    </div>
	  </div>
	</div>
<% end %>
